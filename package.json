{
	"name": "template-angular",
	"private": false,
	"version": "6.0.0",
	"author": "Gregory LÃ³pez",
	"homepage": "https://iamgld.dev",
	"scripts": {
		"ng": "ng",
		"start": "ng serve --configuration development",
		"start:open": "ng serve --configuration development --open",
		"start:host": "ng serve --configuration development --host 0.0.0.0",
		"start:stag": "ng serve --configuration staging",
		"start:prod": "ng serve --configuration production",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"build": "npm run build:prod",
		"build:dev": "ng build --configuration development --progress",
		"build:stag": "ng build --configuration staging --progress",
		"build:prod": "ng build --configuration production --progress",
		"server:ssr": "node dist/server/server.mjs",
		"prettier:": "prettier \"src/**/*.{ts,html,scss,css,js,json,md}\" --check --config .prettierrc",
		"prettier:fix": "prettier \"src/**/*.{ts,html,scss,css,js,json,md}\" --write --config .prettierrc",
		"stylelint": "stylelint  src/**/*.{css,scss}",
		"stylelint:fix": "stylelint --fix  src/**/*.{css,scss}",
		"eslint": "ng lint",
		"eslint:fix": "ng lint --fix",
		"linter": "npm run prettier:fix && npm run eslint:fix && npm run stylelint:fix",
		"lintstaged": "npx lint-staged",
		"postinstall": "npx husky"
	},
	"dependencies": {
		"@angular/animations": "18.2.12",
		"@angular/cdk": "18.2.14",
		"@angular/common": "18.2.12",
		"@angular/compiler": "18.2.12",
		"@angular/core": "18.2.12",
		"@angular/forms": "18.2.12",
		"@angular/material": "18.2.14",
		"@angular/platform-browser": "18.2.12",
		"@angular/platform-browser-dynamic": "18.2.12",
		"@angular/platform-server": "18.2.12",
		"@angular/router": "18.2.12",
		"@angular/ssr": "18.2.12",
		"@ngrx/signals": "18.1.1",
		"express": "4.21.1",
		"rxjs": "7.8.1",
		"tslib": "2.8.1",
		"zone.js": "0.14.10"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "18.2.12",
		"@angular/cli": "18.2.12",
		"@angular/compiler-cli": "18.2.12",
		"@commitlint/cli": "19.4.1",
		"@commitlint/config-conventional": "19.4.1",
		"@schematics/angular": "18.2.12",
		"@types/jest": "29.5.12",
		"@types/node": "22.9.0",
		"@types/express": "5.0.0",
		"angular-eslint": "18.4.1",
		"eslint": "9.15.0",
		"husky": "9.1.7",
		"jest": "29.7.0",
		"jest-preset-angular": "14.3.1",
		"lint-staged": "15.2.10",
		"prettier": "3.3.3",
		"stylelint": "16.10.0",
		"stylelint-config-standard": "36.0.1",
		"stylelint-config-standard-scss": "13.1.0",
		"stylelint-selector-bem-pattern": "4.0.1",
		"typescript": "5.5.4",
		"typescript-eslint": "8.15.0"
	},
	"jest": {
		"preset": "jest-preset-angular",
		"setupFilesAfterEnv": [
			"<rootDir>/config.jest.ts"
		],
		"moduleNameMapper": {
			"@app/(.)": "<rootDir>/src/app/$1",
			"@src/(.)": "<rootDir>/src/$1"
		}
	}
}
